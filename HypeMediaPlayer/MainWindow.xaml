<Window x:Class="HypeMediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <MediaElement Name="player" Stretch="Uniform" LoadedBehavior="Manual" UnloadedBehavior="Stop" Margin="77,36,0,0"/>
        <Button x:Name="buttontest" Content="Play" Cursor="Hand" Click="playMedia" RenderTransformOrigin="1.861,2.12" HorizontalAlignment="Left" Width="75" Height="36" VerticalAlignment="Top"/>
        <Button x:Name="buttontest_Copy" Content="Pause" Cursor="Hand" Click="pauseMedia" RenderTransformOrigin="1.861,2.12" HorizontalAlignment="Left" Width="75" Height="36" VerticalAlignment="Top" Margin="0,54,0,0"/>
        <Slider Margin="2,126,0,0" VerticalAlignment="Top" Name="sound" ValueChanged="changeSoundLvl" Maximum="1" HorizontalAlignment="Left" Width="75"/>
        <Label Content="" Margin="0,95,445,0" VerticalAlignment="Top" Name="sndLbl"/>
    </Grid>
</Window>
